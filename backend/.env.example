# BIDashboard Environment Configuration Template
# Copy this file to .env and update with your actual values

# =======================
# Application Settings
# =======================
APP_NAME=BIDashboard
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production-minimum-32-characters
FRONTEND_URL=http://localhost:4200

# =======================
# Database Configuration
# =======================
# SQL Server Connection Settings
DB_SERVER=localhost
DB_NAME=BIDashboard
DB_USERNAME=mario_gonzalez
DB_PASSWORD=MarioG2024!BIDashboard
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_PORT=1433

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO_SQL=False
DB_AUTOCOMMIT=False

# Backup Configuration
BACKUP_PATH=C:\SQLBackups\BIDashboard\
BACKUP_RETENTION_DAYS=30

# =======================
# JWT Configuration
# =======================
JWT_SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =======================
# Security Settings
# =======================
# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_EXPIRY_DAYS=90

# Login Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30
SESSION_TIMEOUT_MINUTES=30

# Two-Factor Authentication
TWO_FACTOR_ENABLED=false
TWO_FACTOR_ISSUER=BIDashboard

# =======================
# Email Configuration (Optional)
# =======================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_ADDRESS=noreply@bidashboard.com
EMAIL_FROM_NAME=BIDashboard System

# =======================
# Azure Configuration (Optional)
# =======================
# For Azure SQL Database
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=BIDashboard
AZURE_SQL_USERNAME=your-username
AZURE_SQL_PASSWORD=your-password

# Azure Key Vault (for secrets management)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Azure Storage (for file uploads)
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=uploads

# =======================
# Monitoring & Logging
# =======================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/bidashboard.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Audit Settings
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=180

# =======================
# File Upload Settings
# =======================
UPLOAD_PATH=static/uploads/
MAX_UPLOAD_SIZE_MB=50
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_EXTENSIONS=pdf,docx,xlsx,pptx

# =======================
# Dashboard Settings
# =======================
DASHBOARD_CACHE_ENABLED=true
DASHBOARD_CACHE_TTL_SECONDS=3600
DASHBOARD_DEFAULT_REFRESH_MINUTES=60
POWERBI_EMBED_URL=https://app.powerbi.com/reportEmbed

# =======================
# API Configuration
# =======================
API_VERSION=v1
API_PREFIX=/api
RATE_LIMIT_PER_MINUTE=100
REQUEST_TIMEOUT_SECONDS=30
CORS_ORIGINS=http://localhost:4200,https://yourdomain.com

# =======================
# Development Settings
# =======================
# Only for development environment
DEV_AUTO_RELOAD=true
DEV_SHOW_SQL=false
DEV_MOCK_AUTH=false
DEV_SEED_DATABASE=false

# =======================
# Testing Configuration
# =======================
TEST_DATABASE_URL=mssql+pyodbc://sa:TestPassword123!@localhost:1433/BIDashboard_Test?driver=ODBC+Driver+17+for+SQL+Server
TEST_ASYNC=true
TEST_COVERAGE_MIN=80